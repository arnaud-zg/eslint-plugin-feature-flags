{
  "name": "eslint-plugin-feature-flags",
  "version": "0.0.1",
  "type": "module",
  "description": "Lint rules to enforce feature flag hygiene: expire old flags, restrict usage, ensure test coverage.",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "feature-flags"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "dependencies": {
    "@eslint-plugin-feature-flags/expiration-utils": "workspace:^",
    "@eslint-plugin-feature-flags/types": "workspace:^"
  },
  "devDependencies": {
    "@eslint-plugin-feature-flags/eslint-config-base": "workspace:*",
    "@types/eslint": "^8.56.6",
    "@types/node": "^20.12.0",
    "@vitest/coverage-v8": "^3.2.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.4.2",
    "vitest": "^3.2.1"
  }
}
