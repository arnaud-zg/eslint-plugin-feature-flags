{
  "compilerOptions": {
    // Modern ESM setup
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    // Type generation for packages
    "declaration": true,
    
    // Strong type checking
    "strict": true,
    
    // Build performance
    "skipLibCheck": true,
  }
}
